<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.chengxusheji.domain">

	<class name="StudentTask" table="t_StudentTask">

          <!-- 主键作业id -->
          <id name="taskId" column="taskId">
            <generator class="native"/>
          </id>

          <!-- 简单字符串属性: 作业标题 -->
          <property
            name="title"
            column="title"
            type="string"
            length="60"
          />

          <!-- 简单字符串属性: 作业内容 -->
          <property
            name="content"
            column="content"
            type="string"
            length="2000"
          />

          <!-- 多对一属性: 作业学生 -->
          <many-to-one name="studentObj"
            column="studentObj"
            class="Student"
            lazy="false"
            outer-join="true"
            cascade="save-update"
          />

          <!-- 简单图片属性: 作业文件 -->
          <property
            name="taskFile"
            column="taskFile"
            type="string"
            length="50"
          />

          <!-- 简单日期型属性: 作业发布日期 -->
          <property
            name="taskDate"
            column="taskDate"
            	type="string"
            	length="20"
          />

          <!-- 多对一属性: 负责的老师 -->
          <many-to-one name="chargeObj"
            column="chargeObj"
            class="DepartCharge"
            lazy="false"
            outer-join="true"
            cascade="save-update"
          />


		 
		
	</class>
	
</hibernate-mapping>
 
